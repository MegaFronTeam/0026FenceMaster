mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="1")
		+e.btn--plus(type="button")



mixin search()
	+b.search-block
		form
			input(type="text" placeholder="Поиск по номеру или названию запчасти")
			button 
				+icon("search")

mixin page-head(t,...items)
	+b.page-head
		- let l = items.length
		.container
			+breadcrumb('Главная',...items)

			h1= t

mixin parts(elem)
	script.
		addBlock(`#{elem}`)
	div(id=`${elem}Wrap`)

mixin customAlert(icon, text)
	.custom-alert(role='alert')&attributes(attributes)
		+icon(`${icon}`)
		div!= text

mixin topAlert()
	+b.top-alert
		.container
			+customAlert('delivery', 'Осуществляем бесплатную бережную доставку в любой день недели при заказе').custom-alert--success.justify-content-center

mixin categoryItem(img, title, price)
	+b.categoryItem
		+e.wrap
			+img(`img/${img}`, 'bg')
			+e.btns
				+e.row.row
					.col-6.col-lg-12
						+e.btn.btn.btn-outline-white(href='#') Подробнее
					.col-6.col-lg-12
						+e.btn.btn.btn-primary(href='#') Сделать заказ
		+e.caption
			.h5!= title
			span!= price



