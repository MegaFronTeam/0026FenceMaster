mixin sCapturesItem(h, btn)
	+e.item&attributes(attributes)
		+b.section-title
			h2!= h
		+e.content
			block
		+e.btn.btn.btn-primary(href="#")!= btn


mixin sCaptures(data)
	// start sCaptures
	+b.SECTION.sCaptures.section#sCaptures&attributes(attributes)
		.container
			+e.row.row
				.col-lg-6
					+sCapturesItem(`Ограждение <br> <span> в&nbsp;кредит </span>`, `Оставить заявку`).--dark
						+e.img-sm
							+img('img/svg/sCaptures-1.svg')
						+e.row
							.col-auto
								+e.prop
									span Ставка
									.h3 14,9%
							.col-auto
								+e.prop
									span Срок кредита
									.h3 12-84&nbsp;мес.
							.col-12
								+e.prop
									span Сумма кредита
									.h3 100&nbsp;000&nbsp;&mdash; 6&nbsp;000&nbsp;000 руб

				.col-lg-6
					+sCapturesItem(`Калькулятор <br> <span> стоимости </span>`, `Перейти в&nbsp;калькулятор`).--light
						p Рассчитайте стоимость вашего будущего ограждения
						+e.img-lg
							+img('img/sCaptures-2.png')

	// end sCaptures