mixin sOrder(data)
	// start sOrder
	+b.SECTION.sOrder.section#sOrder&attributes(attributes)
		.container
			+e.wrap
				+img('img/sOrder-bg-2.png')
				+form-wrap
					+b.section-title
						h2 
							span заказать подбор
							br
							|  ограждения
						p Оставьте заявку и&nbsp;мы&nbsp;свяжемся с&nbsp;Вами в&nbsp;ближайшее время!
					+e.row.row
						.col-md-6
							+input('Ваш телефон', 'tel')
						.col-md-6
							+e.BUTTON.btn.btn.btn-primary Отправить заявку
					+policy()
	// end sOrder